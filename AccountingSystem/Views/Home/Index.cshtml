<div class="row">
    <div id="bodyContainer" ng-app="App">
        <section id="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-12" ng-controller="Ctrl">
                        <h2>Clients</h2>
                        <form class="form-inline">
                            <div class="form-group">
                                <label for="filter">Filter by name </label>
                                <input type="text" class="form-control" id="filter" ng-model="filter">
                            </div>
                            <button class="btn btn-default" ng-click="getFiltered()">Filter</button>
                            <button class="btn btn-default" ng-click="getAllClients()">Reset filter</button>
                        </form>

                        <div>
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Full Name</th>
                                    </tr>
                                <tbody>
                                    <tr style="cursor: pointer" data-toggle="modal" data-target="#clientCard" ng-click="getClientCard(item.id)" ng-repeat="item in clientList">
                                        <td>{{item.id}}</td>
                                        <td>{{item.fullName}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="clientCard" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Client Card</h4>
                                    </div>
                                    <form class="form-horizontal">
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <label for="id" class="col-sm-2 control-label">ID</label>
                                                <div class="col-sm-10">
                                                    <input type="text" id="exampleInputPassword1" class="form-control" value="{{clientCard.id}}" disabled="disabled">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="fullName" class="col-sm-2 control-label">Full Name</label>
                                                <div class="col-sm-10">
                                                    <input type="text" id="exampleInputPassword1" class="form-control" value="{{clientCard.fullName}}" disabled="disabled">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="bDay" class="col-sm-2 control-label">Birthday</label>
                                                <div class="col-sm-10">
                                                    <input type="text" id="exampleInputPassword1" class="form-control" value="{{clientCard.bDay}}" disabled="disabled">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="phoneNumber" class="col-sm-2 control-label">Phone</label>
                                                <div class="col-sm-10">
                                                    <input type="text" id="exampleInputPassword1" class="form-control" value="{{clientCard.phoneNumber}}" disabled="disabled">
                                                </div>
                                            </div>

                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">ID</th>
                                                        <th scope="col">Order #</th>
                                                        <th scope="col">Date</th>
                                                        <th scope="col">Amount</th>
                                                    </tr>
                                                <tbody>
                                                    <tr ng-repeat="item in clientCard.orders">
                                                        <td>{{item.id}}</td>
                                                        <td>{{item.number}}</td>
                                                        <td>{{item.date}}</td>
                                                        <td>{{item.amount}}</td>
                                                    </tr>
                                                    <tr>
                                                        <td></td>
                                                        <td></td>
                                                        <th class="text-right">Total Amount</th>
                                                        <td>{{clientCard.totalAmount}}</td>
                                                    </tr>

                                                </tbody>
                                            </table>

                                            <div class="row">
                                                <div class="col-sm-2 col-sm-offset-8"></div>
                                                <div class="col-sm-2 col-sm-offset-10"></div>
                                            </div>
                                        </div>
                                    </form>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

